<?xml version="1.0" encoding="utf-8"?>
<!--
    Home Screen Widget layout — Nothing OS dark aesthetic.

    Constraints:
      • RemoteViews supports only a small subset of Views (no custom views,
        no ConstraintLayout below API 31, no animation).
      • Pure #000000 background, white text, 1 dp borders, monospace font.
      • "NOTHING" style: uppercase labels, wide letter-spacing, minimal colour.
-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="14dp"
    android:gravity="center_vertical">

    <!-- Title row: headline text + counter badge -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Widget headline (bound via HomeWidget.saveWidgetData) -->
        <TextView
            android:id="@+id/tv_widget_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="WIDGET APP"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:letterSpacing="0.12"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Counter badge -->
        <TextView
            android:id="@+id/tv_widget_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:letterSpacing="0.05"
            android:paddingStart="8dp" />

    </LinearLayout>

    <!-- 1 dp divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#1F1F1F" />

    <!-- Subtitle row: caption + increment button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_widget_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nothing OS"
            android:textColor="#B3B3B3"
            android:textSize="11sp"
            android:fontFamily="monospace"
            android:letterSpacing="0.08"
            android:maxLines="1"
            android:ellipsize="end" />

        <!--
            Increment button — triggers a HomeWidgetBackgroundIntent.
            Styled as a minimal bordered button matching Nothing OS.
        -->
        <TextView
            android:id="@+id/btn_increment"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="+"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:gravity="center"
            android:background="@drawable/widget_btn_background" />

    </LinearLayout>

</LinearLayout>
